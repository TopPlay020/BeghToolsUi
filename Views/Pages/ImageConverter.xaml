<UserControl
    x:Class="BeghToolsUi.Views.Pages.ImageConverter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BeghToolsUi.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:BeghToolsUi.ViewModel.Pages"
    xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
    d:DataContext="{d:DesignInstance Type=pages:ImageConverterViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Main Content  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <!--  Upload Section  -->
            <Border
                Grid.Column="0"
                Margin="0,0,20,0"
                Padding="20"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                ClipToBounds="True"
                CornerRadius="8">
                <Button
                    Margin="0"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding SelectSourceImagePathCommand}"
                    IsEnabled="{Binding IsConverting, Converter={StaticResource InverseBooleanConverter}}">
                    <Grid>
                        <!--  Dashed Border  -->
                        <Rectangle
                            Fill="Transparent"
                            RadiusX="5"
                            RadiusY="5"
                            Stroke="Gray"
                            StrokeDashArray="4,2"
                            StrokeThickness="2" />
                        <!--  Content  -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Drop image here" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Opacity="0.5"
                                Text="Supported formats: JPG, PNG, ICO, BMP..." />
                        </StackPanel>
                    </Grid>
                </Button>
            </Border>


            <!--  Controls  -->
            <Border
                Grid.Column="1"
                Padding="20,10"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
                <Grid
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsEnabled="{Binding IsConvertMenuEnabled}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Output Format  -->
                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <TextBlock FontWeight="SemiBold" Text="Output Format:" />
                        <ComboBox
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding IsConverting, Converter={StaticResource InverseBooleanConverter}}"
                            ItemsSource="{Binding ImageTypes}"
                            SelectedValue="{Binding OutputImageType, Mode=TwoWay}" />
                    </StackPanel>

                    <!--  Resize  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <TextBlock FontWeight="SemiBold" Text="Resize:" />
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                IsEnabled="{Binding IsConverting, Converter={StaticResource InverseBooleanConverter}}"
                                Text="{Binding OutputHeight, Mode=TwoWay}" />
                            <Button
                                Grid.Column="1"
                                Width="30"
                                Content="×"
                                IsEnabled="{Binding IsConverting, Converter={StaticResource InverseBooleanConverter}}" />
                            <TextBox
                                Grid.Column="2"
                                Margin="5,0,0,0"
                                IsEnabled="{Binding IsConverting, Converter={StaticResource InverseBooleanConverter}}"
                                Text="{Binding OutputWidth, Mode=TwoWay}" />
                        </Grid>
                    </StackPanel>

                    <!--  Background Color  -->
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <TextBlock FontWeight="SemiBold" Text="Background Color:" />
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Rectangle
                                Width="{Binding ElementName=PickColorButton, Path=ActualHeight}"
                                Height="{Binding ElementName=PickColorButton, Path=ActualHeight}"
                                Fill="White"
                                RadiusX="5"
                                RadiusY="5"
                                Stroke="{DynamicResource ControlElevationBorderBrush}"
                                StrokeThickness="5" />

                            <Button
                                x:Name="PickColorButton"
                                Grid.Column="2"
                                HorizontalAlignment="Stretch"
                                Command="{Binding SelectColorCommand}"
                                Content="Pick Color"
                                IsEnabled="{Binding IsJPEG}" />
                        </Grid>
                    </StackPanel>

                    <!--  Convert Button  -->
                    <StackPanel Grid.Row="3" Visibility="{Binding ReadyToExport, Converter={StaticResource BoolToHiddenVisibilityConverter}, ConverterParameter=True}">
                        <Button
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Command="{Binding ConvertImageCommand}"
                            Content="Convert"
                            IsEnabled="{Binding CanConvert}" />
                        <ProgressBar IsIndeterminate="True" Visibility="{Binding IsConverting, Converter={StaticResource BoolToHiddenVisibilityConverter}}" />
                    </StackPanel>
                    <StackPanel Grid.Row="3" Visibility="{Binding ReadyToExport, Converter={StaticResource BoolToHiddenVisibilityConverter}}">
                        <Button
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Command="{Binding ExportImageCommand}"
                            Content="Export" />
                        <ProgressBar IsIndeterminate="True" Visibility="{Binding IsConverting, Converter={StaticResource BoolToHiddenVisibilityConverter}}" />
                    </StackPanel>
                </Grid>
            </Border>


        </Grid>

        <!--  Preview Section  -->
        <Border
            Grid.Row="1"
            Margin="0,20,0,0"
            Padding="15"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        FontWeight="SemiBold"
                        Text="Original Image"
                        TextAlignment="Center" />
                    <Grid Grid.Row="1" VerticalAlignment="Stretch">
                        <Grid xf:Animations.Primary="{xf:Animate BasedOn={StaticResource Grow}, Event=None}" xf:Animations.PrimaryBinding="{Binding CanConvert}">
                            <Image
                                xf:Animations.CombinedBinding="{Binding IsConverting}"
                                xf:Animations.Primary="{xf:Animate BasedOn={StaticResource Shrink},
                                                                   Event=None}"
                                xf:Animations.Secondary="{xf:Animate BasedOn={StaticResource Grow},
                                                                     Event=None}"
                                Source="{Binding SourceImagePath}"
                                Stretch="Uniform" />
                        </Grid>
                    </Grid>
                </Grid>

                <TextBlock
                    Grid.Column="1"
                    Margin="20,0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="→" />

                <Grid
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        FontWeight="SemiBold"
                        Text="Converted Image"
                        TextAlignment="Center" />
                    <Grid Grid.Row="1" VerticalAlignment="Stretch">
                        <Image
                            xf:Animations.Primary="{xf:Animate BasedOn={StaticResource Grow},
                                                               Event=None}"
                            xf:Animations.PrimaryBinding="{Binding IsConverting}"
                            Source="{Binding OutputImagePath}"
                            Stretch="Uniform" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
