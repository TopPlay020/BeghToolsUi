<UserControl
    x:Class="BeghToolsUi.Views.Pages.Monitoring"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BeghToolsUi.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:BeghToolsUi.ViewModel.Pages"
    xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
    d:DataContext="{d:DesignInstance Type=pages:MonitoringViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="550"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid
        Height="130"
        Margin="20"
        VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Border
            Margin="0,0,5,0"
            Padding="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            d:Background="Gray"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Column="0"
                    Margin="10"
                    Source="/Assets/Icons/wifi.png" />
                <ListView
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding NetworkInterfaceViewModels}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="32"
                                    Height="32"
                                    Margin="5"
                                    Source="/Assets/Icons/NetworkAdapter.png" />
                                <StackPanel Margin="5" Orientation="Vertical">
                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                    <TextBlock Text="{Binding IsUp}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        <Border
            Grid.Column="1"
            Width="150"
            Margin="5,0,0,0"
            d:Background="Gray"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="10" />
    </Grid>
</UserControl>
