<UserControl
    x:Class="BeghToolsUi.Views.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BeghToolsUi.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:BeghToolsUi.ViewModel.Pages"
    d:DataContext="{d:DesignInstance Type=pages:SettingsViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid VerticalAlignment="Top">
        <Expander Margin="10" IsExpanded="True">
            <Expander.Header>
                <Grid Background="Transparent" Cursor="Hand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Height="22"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Assets/Icons/ContextMenu.png" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Context Menu Settings" />
                    <Border
                        Grid.Column="2"
                        Margin="10,0"
                        Padding="5"
                        VerticalAlignment="Center"
                        Background="{DynamicResource SmokeFillColorDefaultBrush}"
                        CornerRadius="10">
                        <TextBlock
                            Width="17"
                            Height="17"
                            FontWeight="Bold"
                            Text="1"
                            TextAlignment="Center" />
                    </Border>
                </Grid>
            </Expander.Header>
            <ItemsControl ItemsSource="{Binding ContextMenuItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Command="{Binding DataContext.ContextMenuAddableCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding IsInstalling, Converter={StaticResource InverseBooleanConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Grid.Column="0"
                                    Height="22"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="{Binding IconPath}" />

                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Description}" />

                                <CheckBox
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsInstalled}"
                                    IsHitTestVisible="False" />
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Expander>
    </Grid>
</UserControl>
